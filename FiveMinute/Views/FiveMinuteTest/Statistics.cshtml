@model FiveMinute.ViewModels.FiveMinuteTestViewModels.TestStatisticsViewModel

<div class="container">
    <h2>Статистика теста "@Model.TestName"</h2>
    
    <div class="mb-4">
        <h4>Общая информация</h4>
        <p>Всего прохождений: @Model.TotalAttempts</p>
    </div>

    @if (Model.Attempts != null && Model.Attempts.Any())
    {
        @foreach (var attempt in Model.Attempts)
        {
            <div class="card mb-3">
                <div class="card-header">
                    <h5>Результат пользователя: @attempt.UserName</h5>
                    <p>Время прохождения: @attempt.PassTime</p>
                    <p>Правильных ответов: @attempt.CorrectAnswersCount из @attempt.Answers.Count</p>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Вопрос</th>
                                <th>Ответ</th>
                                <th>Результат</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var answer in attempt.Answers.OrderBy(a => a.QuestionPosition))
                            {
                                <tr>
                                    <td>@answer.QuestionPosition</td>
                                    <td>@answer.QuestionText</td>
                                    <td>@answer.AnswerText</td>
                                    <td>
                                        @if (answer.IsCorrect)
                                        {
                                            <span class="text-success">Верно</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">Неверно</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
    else
    {
        <p>Пока нет результатов прохождения теста.</p>
    }
</div> 