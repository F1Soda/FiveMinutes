@using FiveMinute.Data
@using FiveMinute.ViewModels.AccountViewModels
@using Microsoft.AspNetCore.Identity
@model FiveMinute.ViewModels.HomeViewModels.IndexViewModel

@if (Model != null)
{
	@if (Model.UserRole == "teacher" || Model.UserRole == "admin")
	{
		<div class="full-width-wrapper">
			<div class="d-flex justify-content-center bg-light-blue pt-3">
				<div id="TestCardsRow" class="row container justify-content-center">
					@await Html.PartialAsync("_TestCardsRow", Model.FMTests)
				</div>
			</div>
		</div>

		<div class="pt-3">
			<!-- Tabs -->
			<ul class="nav nav-tabs">
				<li class="nav-item">
					<a class="nav-link active" data-toggle="tab" href="#fiveMinuteTemplates">Шаблоны</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" data-toggle="tab" href="#fiveMinuteTests">Тесты</a>
				</li>
			</ul>

			<div class="tab-content">
				<div id="fiveMinuteTemplates" class="tab-pane fade show active">
					<div id="FMTemplateTable">
						@await Html.PartialAsync("_TemplatesTable", Model.FMTemplates)
					</div>
					<l1 class="nav-item">
						<a class="btn btn-success" asp-area="" asp-controller="FiveMinuteTemplate" asp-action="Create">Создать пятиминутку</a>
					</l1>
				</div>
				<div id="fiveMinuteTests" class="tab-pane fade">
					<div id="FMTestTable">
						@await Html.PartialAsync("_TestsTable", Model.FMTests)
					</div>
					<l1 class="nav-item">
						<a class="btn btn-success" asp-area="" asp-controller="FiveMinuteTest" asp-action="Create">Создать тест</a>
					</l1>
				</div>
			</div>
		</div>
	}
	else if (Model.UserRole == "student")
	{
		
	}

	@if (Model.UserRole == "student")
	{
		<div class="col-md pt-1">
			<h3>Пройденые тесты</h3>
			<table class="table">
				<thead>
					<tr>
						<th>Название</th>
						<th>Организатор</th>
						<th>Время прохождения</th>
						<th>Результат</th>
						<th>Действия</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var result in Model.FMTResults)
					{
						<tr>
							<td>@result.FMTestName</td>
							<td>@result.FMTestOrganizer</td>
							<td>@result.PassTime</td>
							<td>0</td>
							<td>
								<a asp-action="FiveMinuteResult" asp-controller="FiveMinuteTest" asp-route-resultId="@result.Id" class="btn btn-primary">Подробнее</a>
							</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	}
}

@section Scripts {
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script>
		const deleteTemplateUrl = '@Url.Action("DeleteTemplate")';
		const deleteTestUrl = '@Url.Action("DeleteTest")';
	</script>
	<script src="~/js/popup.js"></script>
	<script src="~/js/home-index.js"></script>
	<!-- Подключение Bootstrap CSS и JS для работы вкладок -->
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

	<script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}


